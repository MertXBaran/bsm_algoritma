    <function name="Main" type="None" variable="">
        <parameters/>
        <body>
            <declare name="girdisayisi, girdi, girditoplamlari" type="Integer" array="False" size=""/>
            <assign variable="girdisayisi" expression="0"/>
            <assign variable="girditoplamlari" expression="0"/>
            <assign variable="girdi" expression="1"/>
            <while expression="girdi != 0">
                <output expression="&quot;Say&#305; Giriniz (programdan &#231;&#305;kmak i&#231;in 0 tu&#351;lay&#305;n)&quot;" newline="True"/>
