                <assign variable="girditoplamlari" expression="girditoplamlari+girdi"/>
                <if expression="girdi != 0">
                    <then>
                        <assign variable="girdisayisi" expression="girdisayisi+1"/>
                    </then>
                    <else/>
                </if>
            </while>
            <output expression="&quot;Girdi adeti: &quot; &amp; girdisayisi &amp; &quot;. Girdilerin Toplam&#305;: &quot; &amp; girditoplamlari &amp; &quot;. Girdi Ortalamalar&#305;: &quot; &amp; (girditoplamlari/girdisayisi)" newline="True"/>
        </body>
    </function>
